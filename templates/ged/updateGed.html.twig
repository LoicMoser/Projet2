{% extends 'base.html.twig' %}

{% block title %}Update des documents{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ controller_name }} </h1>
</div>
<form action="/updateGedBdd" method="post">
  <fieldset>
    <legend>Formulaire de Modification</legend>
    <div class="form-group row">
      <label for="staticNom" class="col-sm-2 col-form-label">Nom</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="staticNom" name="nom" placeholder={{ ged.nom }}>
      </div>
      <label for="staticChemin" class="col-sm-2 col-form-label">Chemin</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="staticChemin" name="Chemin" placeholder={{ ged.chemin }}>
      </div>
        <label for="staticPrenom" class="col-sm-2 col-form-label">Visible</label>
          <div class="col-sm-10">
          <div class="custom-control custom-switch col-form-label">
             <input type="checkbox" class="custom-control-input" id="customSwitch1" checked="" name="choix">
         <label class="custom-control-label" for="customSwitch1">Actif/Inactif</label>
      </div>
      </div>
    </div>
    
    
    </fieldset>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
    
{% endblock %}